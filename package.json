{
  "name": "lancaster-properties",
  "version": "1.0.0",
  "description": "Multi-site property presentation system",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html,css}\"",
    "python:lint": "poetry run ruff check scripts/",
    "python:format": "poetry run black scripts/",
    "test": "npm run lint && npm run format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ],
    "*.py": [
      "poetry run ruff check --fix",
      "poetry run black"
    ]
  }
}
